{
	# Optional. Set via DELIGHT_EMAIL in your env file.
	email {$DELIGHT_EMAIL}

	# This deployment runs HTTPS-only and does not bind host port 80.
	# Disable HTTP->HTTPS redirects and disable the ACME HTTP-01 challenge.
	auto_https disable_redirects
}

{$DELIGHT_HOSTNAME} {
	tls {
		issuer acme {
			disable_http_challenge
		}
	}

	encode zstd gzip

	# Proxy all traffic (including WebSocket upgrades) to the Go server.
	reverse_proxy server:3005

	log {
		output file /data/access.log
		format console
	}
}
